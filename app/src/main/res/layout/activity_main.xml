<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/.">



    <TextView
        android:text="My Nanodegree Apps!"
        android:id="@+id/titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
         />

    <Button
        android:layout_below="@+id/titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_spotify"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff08c35"
        android:onClick="spotify_clk" />

    <Button
        android:layout_below="@+id/btn_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP "
        android:id="@+id/btn_scoresapp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff08c35"
        android:onClick="scores_clk" />

    <Button
        android:layout_below="@+id/btn_scoresapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btn_libraryapp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff08c35"
        android:onClick="library_clk" />

    <Button
        android:layout_below="@+id/btn_libraryapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_builditbigger"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff08c35"
        android:onClick="builditbigger_clk" />

    <Button
        android:layout_below="@+id/btn_builditbigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btn_xyzreader"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff08c35"
        android:onClick="xyzreader_clk" />
    <Button
        android:layout_below="@+id/btn_xyzreader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btn_capstone"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titletext"
        android:layout_alignStart="@+id/titletext"
        android:layout_alignRight="@+id/titletext"
        android:layout_alignEnd="@+id/titletext"
        android:background="#fff44336"
        android:onClick="capstone_clk" />


</RelativeLayout>
